<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Activities.MainActivity"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:id="@+id/Main_layout"
    android:background="@drawable/blue_background"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/main_IMG_woman"
            android:layout_width="109dp"
            android:layout_height="300dp"
            android:layout_weight="0.5"
            android:contentDescription="@null"
            android:src="@drawable/woman_pink" />

        <TextView
            android:id="@+id/main_LBL_scoreLeft"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/_0"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />

</LinearLayout>

    <ImageView
        android:id="@+id/main_IMG_cardLeft"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_gravity="left"
        android:contentDescription="@null"
        android:src="@drawable/card"
        android:layout_weight="0.5"/>


    <LinearLayout
        android:layout_width="158dp"
        android:layout_height="381dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/main_PRG_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circle_progress_bar" />

        <ImageView
            android:id="@+id/main_IMG_play"
            android:layout_width="106dp"
            android:layout_height="117dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1"
            android:contentDescription="@null"
            android:foregroundGravity="center"
            android:src="@drawable/play_button_white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/main_IMG_cardRight"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_gravity="right"
        android:layout_weight="0.5"
        android:contentDescription="@null"
        android:src="@drawable/card" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/main_IMG_man"
            android:layout_width="109dp"
            android:layout_height="300dp"
            android:layout_weight="0.5"
            android:contentDescription="@null"
            android:src="@drawable/man_yellow" />

        <TextView
            android:id="@+id/main_LBL_scoreRight"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/_0"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />
    </LinearLayout>
</LinearLayout>